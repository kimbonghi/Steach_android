<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kimbonghi.steach_login">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".Component.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/steach_applogo"
        android:label="Steach"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Activity.SplashActivity" />
        <activity android:name=".Activity.JoinActivity">

        </activity>
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.SelectIdActivity" />
        <activity android:name=".Activity.CertificateActivity" />
        <activity android:name=".Activity.ResetPasswdActivity" />
        <activity android:name=".Activity.CheckIdActivity" />
        <activity android:name=".Activity.ChoosePartActivity" />
        <activity android:name=".Activity.SetNameActivity" />
        <activity android:name=".Activity.SetPhoneActivity" />
        <activity android:name=".Activity.SetPwdActivity" />
        <activity android:name=".Activity.SetTimeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.NewpasswdSetActivity" />
        <activity android:name=".Activity.CalendarActivity" />
        <activity android:name=".Activity.RegisterClassActivity" />
        <activity android:name=".Activity.RegisterStudentActivity" >

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />


        <activity android:name=".Activity.PhoneActivity" android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>